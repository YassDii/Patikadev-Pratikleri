import java.util.Scanner;
public class kdv {
     public static void main(String[] args) {
         
        Scanner input = new Scanner(System.in);
        double fiyat, kdvOran= 0.08;

        System.out.print("Kdv Hesaplanacak Fiyat'ı Giriniz: ");
        fiyat = input.nextDouble();

        boolean kosul1 = fiyat <= 1000 ;
        double sayi = (kosul1) ? (kdvOran = 0.18) : kdvOran;
        // kdvOran yi başta 0.08 olarak atadım ama üst satırdaki kod kosul1 doğru ise kdvOranı 0.18 olarak güncelliyor.

        double kdvTutar = fiyat * kdvOran;
        double kdvliTutar = fiyat+ kdvTutar;
        System.out.print(kdvliTutar);
